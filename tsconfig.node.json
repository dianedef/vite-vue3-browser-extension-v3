{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": [
    "vite.config.ts",
    "vite.chrome.config.ts",
    "vite.firefox.config.ts",
    "manifest.config.ts",
    "manifest.chrome.config.ts",
    "manifest.firefox.config.ts",
    "define.config.ts",
    "src/utils/**/*.ts",
    "package.json"
  ]
}
